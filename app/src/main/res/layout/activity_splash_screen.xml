<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashScreenActivity" android:background="@color/colorLuddusWhite">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo_luddus"
            android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Ana, Andre, Andre, Igor e JP"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:textColor="@color/colorLuddusBlack" android:textSize="22sp" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="51dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="51dp"/>
</android.support.constraint.ConstraintLayout>